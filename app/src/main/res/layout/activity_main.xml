<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextText_AdiSoyadi"
        android:layout_width="263dp"
        android:layout_height="79dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:hint="Adı Soyadı:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editText_Telefon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81" />

    <EditText
        android:id="@+id/editText_Telefon"
        android:layout_width="265dp"
        android:layout_height="72dp"
        android:layout_marginBottom="160dp"
        android:ems="10"
        android:hint="Telefon No:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/button_DigerActivity"
        app:layout_constraintStart_toStartOf="@+id/editTextText_AdiSoyadi"
        app:layout_constraintTop_toBottomOf="@+id/editTextText_AdiSoyadi" />

    <Button
        android:id="@+id/button_DigerActivity"
        android:layout_width="382dp"
        android:layout_height="58dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="126dp"
        android:onClick="digerActivity"
        android:text="Diğer Activty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Telefon" />
</androidx.constraintlayout.widget.ConstraintLayout>